<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/recover_password_view"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center">

    <TextView
        android:id="@+id/login_header"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Esqueceu a Senha"
        android:textSize="32sp"
        android:layout_marginTop="32dp"

        android:layout_marginStart="32dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"

        />

    <TextView
        android:id="@+id/email_lbl"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="email:"
        android:layout_marginStart="32dp"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@id/login_header"
        app:layout_constraintLeft_toLeftOf="parent"

        />

    <EditText
        android:id="@+id/email_txtField"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:inputType="textEmailAddress"

        android:layout_marginStart="32dp"
        android:layout_marginEnd="32dp"
        android:layout_marginTop="16dp"

        app:layout_constraintTop_toBottomOf="@id/email_lbl"
        app:layout_constraintLeft_toLeftOf="parent"
        />

    <Button
        android:id="@+id/clear_password_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Limpar"

        android:layout_marginStart="32dp"
        android:layout_marginEnd="32dp"
        android:layout_marginTop="16dp"

        app:layout_constraintTop_toBottomOf="@id/email_txtField"
        app:layout_constraintLeft_toLeftOf="parent"
        />

    <Button
        android:id="@+id/go_back_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Voltar"

        android:layout_marginStart="32dp"
        android:layout_marginEnd="32dp"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="16dp"

        app:layout_constraintTop_toBottomOf="@id/clear_password_button"
        app:layout_constraintLeft_toLeftOf="parent"
        />

</androidx.constraintlayout.widget.ConstraintLayout>